<Page
    x:Class="GameInterface.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameInterface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">

    <Grid x:ConnectionId='2' Background="Black" x:Name="gridMain" Margin="20,20,20,20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="1880" Height="1040">
        <TextBlock x:ConnectionId='3' x:Name="txtScore" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Score: " VerticalAlignment="Top" Height="39" Width="162" FocusVisualPrimaryBrush="#FFFF0404" FocusVisualSecondaryBrush="#99FF0000" Foreground="Red" SelectionHighlightColor="#FF0080FF"/>
        <TextBlock x:ConnectionId='4' x:Name="txtLevel" HorizontalAlignment="Left" Margin="217,10,0,0" TextWrapping="Wrap" Text="Level:" VerticalAlignment="Top" Height="39" Width="162" FocusVisualPrimaryBrush="#FFFF0404" FocusVisualSecondaryBrush="#99FF0000" Foreground="Red" SelectionHighlightColor="#FF0080FF"/>
        <TextBlock x:ConnectionId='5' x:Name="txtTimer" HorizontalAlignment="Left" Margin="520,19,0,0" TextWrapping="Wrap" Text="Timer: " VerticalAlignment="Top" Height="39" Width="162" FocusVisualPrimaryBrush="#FFFF0404" FocusVisualSecondaryBrush="#99FF0000" Foreground="Red" SelectionHighlightColor="#FF0080FF"/>
        <TextBlock x:ConnectionId='6' x:Name="txtHighScores" HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="39" Width="162" FocusVisualPrimaryBrush="#FFFF0404" FocusVisualSecondaryBrush="#99FF0000" Foreground="Red" SelectionHighlightColor="#FF0080FF"/>
    </Grid>
</Page>

